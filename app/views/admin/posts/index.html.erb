<div class="w100p">
	<h3>총 <%= content_tag :span, Post.count, :class => "font-important" %>개의 글</h3>
</div>

<table>
  <thead>
    <tr>
      <th>Post</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.id %></td>
        <td><%= link_to post.title, edit_admin_post_path(post) %></td>
        <td><%= post.created_at %></td>
        <td><%= link_to '미리보기', admin_post_path(post) %></td>
        <td><%= link_to '글 삭제', admin_post_path(post), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '새 글 작성하기', new_admin_post_path %>
